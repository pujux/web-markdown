{
  "name": "web-markdown",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Framework-agnostic HTML to Markdown content negotiation",
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "build": "pnpm -r run build",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^4.0.18"
  }
}
